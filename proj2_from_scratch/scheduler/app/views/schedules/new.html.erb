
<div class="container">
  <div class="row">
    <h3>Create Schedule!</h3>
    <div class="column">
      <%= form_tag(schedule_new_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Courses", size: 50 %>
      <%= submit_tag "Search", :class => 'button right' %>
      <% end %>
    </div>

  <% if @courses %>
    <div class="container">
      <div class="row">
        <h2>Browse by Department</h2>
        <div class="column">
          <table class="table">
            <tbody>
              <% @courses.each do |c| %>
                <tr>
                  <%= c.id %>: <%= c.title %>: <%= c.course_name %>
                  <%= button_to "Add Class", add_class_path(course_id: c.id, schedule: @schedule), :class => "button medium", :method => :get %>
                  <br>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% end %>

    <h4> Saved Courses </h4>
    <% @schedule.courses.each do |course| %>
          <%= course.id %>, <%= course.title %> <br>
        <% end %>


    <br> <br>


    <div class="column">
      <table class="table">
        <tbody>
          <%= form_for @schedule, :url => schedules_path do |c| %>
              <%= c.submit 'Save Schedule', :class => 'button right' %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
