<h3>Create a New Course!</h3>
<%= form_for @course, :url => courses_path do |c| %>
	<div class="form-group">
      <%= c.label :name, 'Name' %>
      <%= c.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= c.label :day, 'Day (format: "Monday")' %>
      <%= c.text_field :day, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= c.label :time, 'Time (format: "9")' %>
      <%= c.text_field :time, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= c.label :location, 'Location' %>
      <%= c.text_field :location, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= c.label :description, 'Description' %>
      <%= c.text_field :description, :autofocus => true, class: 'form-control' %>
    </div>
    <%= c.submit 'Submit', :class => 'button right' %>
<% end %>